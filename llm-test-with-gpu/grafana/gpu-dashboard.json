{
  "id": null,
  "uid": "gpu-dashboard",
  "title": "GPU Monitoring",
  "tags": ["gpu", "monitoring"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "GPU Utilization",
      "type": "stat",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_UTIL",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "GPU Memory Usage",
      "type": "stat",
