{
  "id": null,
  "uid": "gpu-cpu-dashboard",
  "title": "GPU & CPU Monitoring",
  "tags": ["gpu", "cpu", "monitoring"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 0,
      "title": "GPU Metrics",
      "type": "text",
      "options": {
        "content": "# GPU Metrics",
        "mode": "markdown"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "blue"
          }
        }
      },
      "gridPos": {"h": 2, "w": 24, "x": 0, "y": 0}
    },
    {
      "id": 1,
      "title": "GPU Utilization",
      "type": "stat",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_UTIL",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"h": 10, "w": 6, "x": 0, "y": 2}
    },
    {
      "id": 2,
      "title": "GPU Memory Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_FB_USED / DCGM_FI_DEV_FB_TOTAL * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"h": 10, "w": 6, "x": 6, "y": 2}
    },
    {
      "id": 3,
      "title": "GPU Temperature",
      "type": "stat",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_TEMP",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "celsius",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 85}
            ]
          }
        }
      },
      "gridPos": {"h": 10, "w": 6, "x": 12, "y": 2}
    },
    {
      "id": 4,
      "title": "GPU Power Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_POWER_USAGE",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "min": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 150},
              {"color": "red", "value": 200}
            ]
          }
        }
      },
      "gridPos": {"h": 10, "w": 6, "x": 18, "y": 2}
    },
    {
      "id": 4.5,
      "title": "CPU Metrics",
      "type": "text",
      "options": {
        "content": "# CPU Metrics",
        "mode": "markdown"
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "green"
          }
        }
      },
      "gridPos": {"h": 2, "w": 24, "x": 0, "y": 10}
    },
    {
      "id": 5,
      "title": "CPU Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"h": 10, "w": 6, "x": 0, "y": 12}
    },
    {
      "id": 6,
      "title": "CPU Load Average",
      "type": "stat",
      "targets": [
        {
          "expr": "node_load1",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 2},
              {"color": "red", "value": 4}
            ]
          }
        }
      },
      "gridPos": {"h": 10, "w": 6, "x": 6, "y": 12}
    },
    {
      "id": 7,
      "title": "System Memory Usage",
      "type": "stat",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      },
      "gridPos": {"h": 10, "w": 6, "x": 12, "y": 12}
    },
    {
      "id": 8,
      "title": "CPU Cores",
      "type": "stat",
      "targets": [
        {
          "expr": "count by (instance) (node_cpu_seconds_total{mode=\"idle\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "fixed",
            "fixedColor": "blue"
          }
        }
      },
      "gridPos": {"h": 10, "w": 6, "x": 18, "y": 12}
    },
    {
      "id": 9,
      "title": "GPU Utilization Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_GPU_UTIL",
          "refId": "A",
          "legendFormat": "GPU Utilization %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 12, "w": 12, "x": 0, "y": 24}
    },
    {
      "id": 10,
      "title": "GPU Memory Usage Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "DCGM_FI_DEV_FB_USED / DCGM_FI_DEV_FB_TOTAL * 100",
          "refId": "A",
          "legendFormat": "GPU Memory %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 12, "w": 12, "x": 12, "y": 24}
    },
    {
      "id": 11,
      "title": "CPU Usage Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "refId": "A",
          "legendFormat": "CPU Usage %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 12, "w": 12, "x": 0, "y": 36}
    },
    {
      "id": 12,
      "title": "CPU Load Average Over Time",
      "type": "timeseries",
      "targets": [
        {
          "expr": "node_load1",
          "refId": "A",
          "legendFormat": "1min"
        },
        {
          "expr": "node_load5",
          "refId": "B",
          "legendFormat": "5min"
        },
        {
          "expr": "node_load15",
          "refId": "C",
          "legendFormat": "15min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "gridPos": {"h": 12, "w": 12, "x": 12, "y": 36}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s",
  "schemaVersion": 30,
  "version": 1
}
